@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h2>Animal Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Breed): @Html.DisplayFor(model => model.Breed)</h3>
<h3>@Html.DisplayNameFor(model => model.Admission): @Html.DisplayFor(model => model.Admission)</h3>

<ul>
@if (model.Type == "Dog")
{
  @foreach
  {
  <li>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</li>
  }
}
</ul>

<p>@Html.ActionLink("Back to animals", "Index")</p>